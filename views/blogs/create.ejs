<% if (user) { %>
    <div class="create-blog content">
        <form action="/blogs" method="POST">
            <label for="title">Blog title:</label>
            <input type="text" id="title" name="title" placeholder="1-50 characters" value="<%= draft.title %>">
            <% if (error && error.title){ %>
                <p class="error">
                    <%= error.title %>
                </p>
            <% } %> 
            <label for="snippet">Blog snippet:</label>
            <input type="text" id="snippet" name="snippet" placeholder="1-100 characters" value="<%= draft.snippet %>">
            <% if (error && error.snippet){ %>
                <p class="error">
                    <%= error.snippet %>
                </p>
            <% } %> 
            <label for="body">Blog body:</label>
            <textarea id="body" name="body" placeholder="1-2000 characters"><%= draft.body %></textarea>
            <% if (error && error.body){ %>
                <p class="error">
                    <%= error.body %>
                </p>
            <% } %>            
            <button id="submit-blog">Submit</button>
        </form>
    </div>
    <% } else { %>
        <%- include('../partials/not-authorized.ejs') %>
            <% } %>
